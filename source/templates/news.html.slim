//- content_for(:head)
  == dato_meta_tags(page)

section
  .wrap.formatted-content
    - if page.title.present?
      .margin--top-3.margin--top-5-on-lap.page__title--underline
        = page.title

    .grid

      - dato.news.each do |news_item|
        
        .grid__item.width-3-12.align--center
          = image_tag news_item.image.file.to_url, class: 'news__image--small'

        .visible--on-tab.grid__item.width-3-12.main-text.margin--both-3
          = news_item.date

        .visible--on-tab.width-6-12.grid__item.main-text.margin--both-3
          = news_item.text
        .hidden--on-tab.width-9-12.grid__item.main-text.margin--both-2.strong
          = news_item.date
        .hidden--on-tab.grid__item.width-12-12.margin--bottom-2
          = news_item.text

    .visible--on-tab.margin--both-3