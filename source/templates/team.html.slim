//- content_for(:head)
  == dato_meta_tags(page)

section
  .wrap
    - if page.title.present?
      .margin--top-3.margin--top-5-on-lap.page__title--underline
        = page.title

    .grid--middle.align--right-on-tab

      - page.member.each do |memb|
        
        .grid__item.tab-7-12.align--center
          = image_tag memb.picture.file.to_url, class: 'team__image'

        .grid__item.tab-5-12.main-text.align--center.align--left-on-tab
          strong = memb.name
          br
          = memb.title
          br
          = memb.email
          br
          = memb.phone

        .hidden--on-tab.margin--bottom-3
        
    - if page.section_title.present?
      .margin--top-3.margin--top-5-on-lap.page__title--underline
        = page.section_title

    .grid--middle.align--right-on-tab
      - page.past_member.each do |past_memb| 
        .grid__item.tab-7-12.align--center
          = image_tag past_memb.picture.file.to_url, class: 'team__image'

        .grid__item.tab-5-12.main-text.align--center.align--left-on-tab
          strong = past_memb.name
          br
          = past_memb.title
          br
          = past_memb.email
          br
          = past_memb.phone

        .hidden--on-tab.margin--bottom-3
